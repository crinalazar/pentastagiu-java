<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.lazar" />

    <bean name="flights" class="java.util.HashSet"/>
    <bean name="users" class="java.util.HashSet"/>
    <bean name="usersOnFlight" class="java.util.HashSet"/>
    <bean class="java.lang.String"/>

    <bean name="user" class="airportapp.User" scope="prototype" lazy-init="true">
        <constructor-arg index="2" value="00.00.0000"/>
</bean>

    <bean name="flight" class="airportapp.Flight" scope="prototype" lazy-init="true">
        <constructor-arg index="2" value="00/00/0000 00:00"/>
        <constructor-arg index="3" value = "0"/>
        <constructor-arg index="4" value= "0"/>

    </bean>

        <bean class= "airportapp.AirportManager"  lazy-init="true">
        <!--<constructor-arg name="flight" ref="flight"/>-->
        <!--<constructor-arg name="user" ref="user"/>-->
    </bean>




</beans>